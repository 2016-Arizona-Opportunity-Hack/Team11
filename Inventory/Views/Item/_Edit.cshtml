@model Inventory.Models.Item
@{
    ViewBag.Title = "Index";
}
<div class="form-group">
    @Html.LabelFor(model => model.CategoryId, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-7">
        @Html.TextBoxFor(model => model.CategoryId, new { @class = "form-control" })
      //  @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.Categories, "CategoryId", "CategoryName", Model.CategoryId), new { @class = "singleSelect" })
        @Html.ValidationMessageFor(model => model.CategoryId)
    </div>
</div>
