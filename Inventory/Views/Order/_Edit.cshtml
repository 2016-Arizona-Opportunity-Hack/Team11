@model Inventory.ViewModels.OrderCreate

<div class="well">
    <h4 style="margin-top: 0px; margin-bottom: 15px;">Order Details</h4>

    <label style="margin-right: 10px;">Department</label>

    @if (Model.Order.IsFulfilled)
    {
        @Html.DisplayFor(m => m.Order.DepartmentId)
    }
    else
    {
        @Html.DropDownListFor(m => m.SelectedDepartmentId, new SelectList(Model.Departments, "DepartmentId", "Name", Model.SelectedDepartmentId), new { @class = "singleSelect"})
    }

    <label style="margin-right: 10px;">Location</label>
    @if (Model.Order.IsFulfilled)
    {
        @Html.DisplayFor(m => m.Order.LocationId)
    }
    else
    {
        @Html.DropDownListFor(m => m.SelectedLocationId, new SelectList(Model.Locations, "LocationId", "Name", Model.SelectedLocationId), new { @class = "singleSelect" })
    }
</div>


