@model Inventory.ViewModels.InventoryCreate
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-1 col-xs-2">Item</div>
    <div class="col-sm-7">
        @Html.DropDownListFor(m => m.Inventory.ItemId, new SelectList(Model.Items, "ItemId", "Name", Model.Inventory.ItemId), new { @class = "singleSelect" })
    </div>
</div>
<br />

<div class="row">
    <div class="col-sm-1 col-xs-2">Location</div>
    <div class="col-sm-7">
        @Html.DropDownListFor(m => m.Inventory.LocationId, new SelectList(Model.Locations, "LocationId", "Name", Model.Inventory.LocationId), new { @class = "singleSelect" })
    </div>
</div>
<br />

<div class="row">
    <div class="col-sm-1 col-xs-2">Quantity</div>
    <div class="col-sm-7">
        @Html.TextBoxFor(model => model.Inventory.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Inventory.Quantity)
    </div>
</div>
<br />

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 form-btns">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i>
                <span>Save</span>
        </button>
        <a href="@Url.Action("Index", "Inventory")" class="btn btn-default"><i class="fa fa-times"></i><span>Cancel</span></a>
    </div>
</div>